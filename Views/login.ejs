<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="css/style.css" rel="stylesheet">
  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
  <title>Memorize</title>
</head>

<body class="grey lighten-3">
  <nav class="z-depth-0">
    <div class="nav-wrapper container">
      <a class="brand-logo" href="login"> &nbsp;Memorize</a>
    </div>
  </nav>
  <div class="section"></div>
  <main>
    <center>
      <img class="responsive-img" style="width: 150px;" src="img/logo.png" />
      <div class="section"></div>

      <!-- <h5 class="indigo-text">Lütfen, hesabınıza giriş yapınız</h5> -->


      <div class="container">
        <div class="z-depth-1 grey lighten-4 row" id="loginPanel"
          style="display: inline-block; padding: 14px 48px 0px 48px; border: 1px solid #EEE;">
          <h6>Giriş Yap</h6>
          <form class="col s12" id="loginForm">
            <div class='row'>
              <div class='col s12'>
              </div>
            </div>
            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate' type='email' id='email' required/>
                <label for='email'>Email Giriniz</label>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate' type='password' id='password' required/>
                <label for='password'>Şifreyi Giriniz</label>
              </div>
              <label style='float: right;'>
                <a class='pink-text' href='#!'><b>Şifremi Unuttum.</b></a>
              </label>
            </div>

            <br />
            <center>
              <div class='row'>
                <div class="preloader-wrapper big active" id="loginspinner">
                  <div class="spinner-layer spinner-blue-only">
                    <div class="circle-clipper left">
                      <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                      <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                      <div class="circle"></div>
                    </div>
                  </div>
                </div>
                <button type='submit' id="btn-login" class='col s12 btn btn-large waves-effect indigo'>Giriş Yap</button>
              </div>
            </center>
          </form>
        </div>
        <div class="z-depth-1 grey lighten-4 row" id="registerPanel"
          style="display: inline-block; padding: 14px 48px 0px 48px; border: 1px solid #EEE;">
          <h6>Üye Ol</h6>
          <form class="col s12" id="registerform">
            <div class='row'>
              <div class='col s12'>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate' type='email' id='registerEmail' required />
                <label for='email'>Email Giriniz</label>
              </div>
            </div>

            <div class='row' id="password">
              <div class='input-field col s12'>
                <input class='validate' type='password' id='registerPassword' />
                <label for='password'>Şifreyi Giriniz</label>
              </div>
              <label style='width: right;visibility: hidden'>
                  <a class='pink-text' href='#!'><b>Şifremi Unuttum.</b></a>
                </label>
            </div>
            <div class='row' id="password">
              <div class='input-field col s12'>
                <input class='validate' type='password' id='registerPasswordRepeat' />
                <label for='password'>Şifreyi tekrar Giriniz</label>
              </div>
            </div>

            <br />
            <center>
              <div class='row'>
                  <div class="preloader-wrapper big active" id="registerspinner">
                      <div class="spinner-layer spinner-blue-only">
                        <div class="circle-clipper left">
                          <div class="circle"></div>
                        </div>
                        <div class="gap-patch">
                          <div class="circle"></div>
                        </div>
                        <div class="circle-clipper right">
                          <div class="circle"></div>
                        </div>
                      </div>
                    </div>
                <button type='submit' id="btn-register"
                  class='col s12 btn btn-large waves-effect indigo'>Üye Ol</button>
              </div>
            </center>
          </form>
        </div>
      </div>
      <a href="#" id="register">Üye Ol</a>
    </center>

    <div class="section"></div>
    <div class="section"></div>
  </main>
  <script src="js/login.js"></script>
</body>

</html>